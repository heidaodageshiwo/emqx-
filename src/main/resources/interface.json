//通信接口配置命令(最好是全量设置)
"/v1/{edgeId}/security/interface/cmd"
{
    "mid": 7,
    "deviceId": "0120b22d-ba64-478b-ab73-9e0983d3075b",
    "timestamp":"2021-08-12 08:29:45",
    "type":"CMD_IF_SET",
    "param":[{
            "if_name":"Console",
            "operate":"up"
        },
        {
            "if_name":"eth0",
            "operate":"up"
        },
        {
            "if_name":"eth1",
            "operate":"down"
        }
    ]
}
